        </ImageView>




    </RelativeLayout>


    <RelativeLayout
        android:background="@drawable/lyrics"
    android:id="@+id/mainser"
        android:layout_margin="3dp"
    android:layout_width="match_parent"
    android:layout_below="@+id/headerlib"
    android:layout_height="50dp">


