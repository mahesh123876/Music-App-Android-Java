        </ImageView>
        <RelativeLayout
            android:id="@+id/prodetailsfornav"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/proendline"
            android:layout_marginTop="70dp">

            <RelativeLayout
