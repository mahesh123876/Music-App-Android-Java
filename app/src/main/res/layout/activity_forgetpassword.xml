<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.god.lcproclientapp.Forgetpassword">


    <com.github.furkankaplan.fkblurview.FKBlurView
        android:layout_centerInParent="true"
        android:id="@+id/loginmainlayoutchange"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="500dp">

        <RelativeLayout
            android:id="@+id/supportforloginmainlayoutchange"
            android:layout_width="match_parent"
            android:background="@drawable/deignforbottom"
            android:layout_height="match_parent">


            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:layout_alignParentTop="true"
                android:layout_margin="10dp"
                app:cardCornerRadius="150dp"

                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <TextView
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/baseline_person_outline_24"
                        android:text="Forget Password"
                        android:textSize="20dp"
                        android:textStyle="bold">

                    </TextView>


                </RelativeLayout>

            </androidx.cardview.widget.CardView>


            <RelativeLayout
                android:id="@+id/logincenterboxchange"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_centerInParent="true">

                <RelativeLayout
                    android:id="@+id/txtfieldemaillayoutchange"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/txtfieldbackground">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toLeftOf="@+id/supportgmailchange"
                        android:layout_toRightOf="@+id/gmailimageforchange">

                        <EditText
                            android:textColorHint="@color/black"
                            android:textColor="@color/black"
                            android:id="@+id/edittext_email_for_change"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:hint="Gmail"
                            android:inputType="textWebEmailAddress"
                            android:textSize="15dp">

                        </EditText>


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/supportgmailchange"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentEnd="true">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerInParent="true"></ImageView>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/gmailimageforchange"
                        android:layout_width="50dp"
                        android:layout_height="50dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/baseline_mail_outline_24">

                        </ImageView>

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/txtfieldpasswordlayoutchange"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/txtfieldemaillayoutchange"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/txtfieldbackground">

                    <RelativeLayout
                        android:id="@+id/lockimageforchange"
                        android:layout_width="50dp"
                        android:layout_height="50dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_baseline_lock_24">

                        </ImageView>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toLeftOf="@+id/showpasswordchange"
                        android:layout_toRightOf="@+id/lockimageforchange">

                        <EditText
                            android:textColor="@color/black"
                            android:id="@+id/edittext_password_for_change"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:hint="New Password"
                            android:textColorHint="@color/black"
                            android:inputType="textPassword"
                            android:textSize="15dp">

                        </EditText>


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/showpasswordchange"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentEnd="true">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/baseline_remove_red_eye_24">

                        </ImageView>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/hidepasswordchange"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentEnd="true"
                        android:visibility="invisible">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/hidetext">

                        </ImageView>

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/txtfieldphonelayoutchange"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/txtfieldpasswordlayoutchange"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/txtfieldbackground">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toLeftOf="@+id/supportphonechange"
                        android:layout_toRightOf="@+id/phoneimageforchange">

                        <EditText
                            android:textColorHint="@color/black"
                            android:textColor="@color/black"
                            android:id="@+id/edittext_phone_for_change"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:hint="Phone Number"
                            android:inputType="phone"
                            android:maxLength="10"
                            android:textSize="15dp">

                        </EditText>


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/supportphonechange"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentEnd="true">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerInParent="true">

                        </ImageView>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/phoneimageforchange"
                        android:layout_width="50dp"
                        android:layout_height="50dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/baseline_phone_24">

                        </ImageView>

                    </RelativeLayout>

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/relativechangebtn"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"
                    android:background="@drawable/loginbtnbackground">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Change"
                        android:textColor="@color/white"
                        android:textSize="14dp"
                        android:textStyle="bold">

                    </TextView>

                </RelativeLayout>


            </RelativeLayout>




        </RelativeLayout>
    </com.github.furkankaplan.fkblurview.FKBlurView>
    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/progressforforget"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:visibility="invisible"
        android:layout_centerInParent="true"
        android:src="@drawable/wavetry">

    </pl.droidsonroids.gif.GifImageView>
</RelativeLayout>