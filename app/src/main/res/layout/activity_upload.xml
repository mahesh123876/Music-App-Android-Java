<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.god.lcproclientapp.upload">



    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/contin"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/navtope"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_margin="5dp"
            android:layout_centerInParent="true"
            android:onClick="showPopup"
            android:src="@drawable/ic_baseline_view_headline_24">


        </ImageView>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:src="@drawable/nothing"


            >

        </ImageView>




    </RelativeLayout>


    <ImageView
        android:id="@+id/upload"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_baseline_arrow_circle_down_24" />

    <RelativeLayout
        android:id="@+id/forloopupload"
        android:layout_width="100dp"
        android:visibility="invisible"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imagviewdragupload"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/drag">

        </de.hdodenhof.circleimageview.CircleImageView>


    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/gridlocate"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp">

    <GridLayout
        android:id="@+id/gridup"
        android:layout_margin="2dp"
       android:layout_alignParentStart="true"
        android:rowCount="1"
        android:columnCount="5"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/uphome"
            android:layout_margin="2dp"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:orientation="vertical">
            <ImageView
                android:src="@drawable/homelight"
                android:layout_width="match_parent"
                android:layout_height="30dp">

            </ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="home"
                android:textSize="10dp">

            </TextView>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/uplib"
            android:layout_margin="2dp"
            android:layout_gravity="fill"
            android:orientation="vertical"

            android:layout_columnWeight="1"
            android:layout_rowWeight="1">
            <ImageView
                android:src="@drawable/liblight"
                android:layout_width="match_parent"
                android:layout_height="30dp">

            </ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="library"
                android:textSize="10dp">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/upup"

            android:layout_margin="2dp"
            android:layout_gravity="fill"
            android:orientation="vertical"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            >
            <ImageView
                android:src="@drawable/uploadlight"
                android:layout_width="match_parent"
                android:layout_height="30dp">

            </ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="upload"
                android:textSize="10dp">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/upsearch"
            android:layout_margin="2dp"
            android:layout_gravity="fill"
            android:orientation="vertical"

            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            >
            <ImageView
                android:src="@drawable/searchlight"
                android:layout_width="match_parent"
                android:layout_height="30dp">

            </ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="search"
                android:textSize="10dp">

            </TextView>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/uplyrics"
            android:layout_margin="2dp"
            android:layout_gravity="fill"
            android:orientation="vertical"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            >
            <ImageView
                android:src="@drawable/ic_baseline_lyrics_24"
                android:layout_width="match_parent"
                android:layout_height="30dp">

            </ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="lyrics"
                android:textSize="10dp">

            </TextView>
        </LinearLayout>


    </GridLayout>


    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/upre"
        android:visibility="invisible"
        android:layout_width="250dp"
        android:background="@color/white"
        android:layout_height="match_parent">



        <RelativeLayout
            android:id="@+id/uplogofornav"
            android:background="@drawable/contin"
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <RelativeLayout
                android:id="@+id/upavatar"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/letter">
                <TextView
                    android:id="@+id/emailfirstup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/white"
                    android:textSize="20dp">

                </TextView>


            </RelativeLayout>

            <TextView
                android:id="@+id/uptxtemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/upavatar"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:textSize="15dp">

            </TextView>
        </RelativeLayout>
        <TextView
            android:id="@+id/upendline"
            android:layout_below="@+id/uplogofornav"
            android:layout_width="match_parent"
            android:layout_marginTop="40dp"
            android:textAlignment="center"
            android:text="⊱ ──────── ✞ ──────── ⊰"
            android:textStyle="bold"
            android:layout_height="wrap_content">

        </TextView>
        <ImageView
            android:id="@+id/upclosenav"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_baseline_close_24">

        </ImageView>
        <ImageView
            android:id="@+id/upopennav"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:visibility="invisible"
            android:src="@drawable/ic_baseline_view_headline_24">
        </ImageView>
        <RelativeLayout
            android:id="@+id/updetailsfornav"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/upendline"
            android:layout_marginTop="70dp">

            <RelativeLayout
                android:layout_margin="8dp"
                android:id="@+id/upprofilefornav"
                android:layout_width="match_parent"
                android:layout_height="40dp">


                <TextView
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:text="PROFILE"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    >

                </TextView>
            </RelativeLayout>
            <RelativeLayout
                android:layout_margin="8dp"
                android:id="@+id/upHelpfornav"
                android:layout_below="@+id/upprofilefornav"
                android:layout_width="match_parent"
                android:layout_height="40dp">


                <TextView
                    android:layout_width="match_parent"
                    android:text="HELP"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_height="match_parent">

                </TextView>
            </RelativeLayout>

            <RelativeLayout
                android:layout_margin="8dp"
                android:id="@+id/upkaraokefornav"
                android:layout_below="@+id/upHelpfornav"
                android:layout_width="match_parent"
                android:layout_height="40dp">


                <TextView
                    android:layout_width="match_parent"
                    android:text="KARAOKE"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_height="match_parent">

                </TextView>
            </RelativeLayout>
            <RelativeLayout
                android:layout_margin="8dp"
                android:id="@+id/upchordchartfornav"
                android:layout_below="@+id/upkaraokefornav"
                android:layout_width="match_parent"
                android:layout_height="40dp">


                <TextView
                    android:layout_width="match_parent"
                    android:text="CHORT CHAT"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_height="match_parent">

                </TextView>
            </RelativeLayout>

            <ImageView
                android:id="@+id/uppower"
                android:layout_alignParentEnd="true"
                android:layout_margin="10dp"
                android:src="@drawable/ic_baseline_power_settings_new_24"
                android:layout_alignParentBottom="true"
                android:layout_width="30dp"
                android:layout_height="30dp">

            </ImageView>

        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>